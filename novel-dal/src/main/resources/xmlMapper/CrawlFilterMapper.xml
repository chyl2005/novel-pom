<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.novel.dal.mapper.CrawlFilterMapper">
    <resultMap id="resultMap" type="com.github.novel.entity.crawl.CrawlFilterDO">

        <id column="id" property="id"/>
        <result column="xpath_id" property="xpathId"/>
        <result column="filter_type" property="filterType"/>
        <result column="regex" property="regex"/>
        <result column="replacement" property="replacement"/>
        <result column="xpath_type" property="xpathType"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="is_del" property="isDel"/>
    </resultMap>

    <sql id="generalColumns">
        id,
        xpath_id,
        filter_type,
        regex,
        replacement,
        xpath_type,
        gmt_created,
        gmt_modified,
        is_del

    </sql>

    <insert id="insertOrUpdate" useGeneratedKeys="true" keyProperty="id">
        insert into craw_site (<include refid="generalColumns"/>)

        values (#{id},
        #{xpathId},
        #{filterType},
        #{regex},
        #{replacement},
        #{xpathType},
        now(),
        now(),
        0)
        on duplicate key update
        <trim suffixOverrides=",">
            xpath_id = VALUES(xpath_id),
            filter_type = VALUES(filter_type),
            regex = VALUES(regex),
            <if test="replacement!=null">
                replacement = VALUES(replacement),
            </if>
            xpath_type = VALUES(xpath_type),
            is_del =0,
            gmt_modified=now()
        </trim>
    </insert>


    <insert id="batchInsertOrUpdate" parameterType="list">
        insert into craw_site (<include refid="generalColumns"/>)
        values
        <foreach collection="list" item="item" separator=",">
            (#{id},
            #{xpathId},
            #{filterType},
            #{regex},
            #{replacement},
            #{xpathType},
            now(),
            now(),
            0)
        </foreach>
        ON DUPLICATE KEY UPDATE
        xpath_id = VALUES(xpath_id),
        filter_type = VALUES(filter_type),
        regex = VALUES(regex),
        <if test="replacement!=null">
            replacement = VALUES(replacement),
        </if>
        xpath_type = VALUES(xpath_type),
        is_del =0,
        gmt_modified=now()
    </insert>


    <select id="selectByParam" resultMap="resultMap">
        select
        <include refid="generalColumns"/>
        from craw_site
        where is_del=0
        <if test="ids!=null">
            and `id` in
            <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>


    <select id="selectByCount" resultType="int">
        select
        count(*) from craw_site
        where is_del=0
        <if test="ids!=null">
            and `id` in
            <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </select>


    <update id="deleteById">
        update craw_site
        set is_del = 1, gmt_modified=now()
        where id = #{id}
    </update>


</mapper>